@model List<DistributionOfStudents.Data.Models.Faculty>

@{
    ViewData["Title"] = "Факультеты";
}
@section Css{
    <link rel="stylesheet" href="~/css/faculty.css" type="text/css" asp-append-version="true" />
}

<div id="content" class="ps-lg-4 pe-lg-4 pt-2" style="position: relative">
    <h1 class="d-inline-block">Факультеты</h1>

    <a class="text-success ms-2" asp-action="Create">
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" class="bi bi-plus-circle-fill suc" viewBox="0 0 16 16">
            <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zM8.5 4.5a.5.5 0 0 0-1 0v3h-3a.5.5 0 0 0 0 1h3v3a.5.5 0 0 0 1 0v-3h3a.5.5 0 0 0 0-1h-3v-3z" />
        </svg>
    </a>
    <div class="row mx-1">
        @foreach (var item in Model)
        {
            @await Html.PartialAsync("FacultyCardPartial", item)
        }
    </div>
</div>
