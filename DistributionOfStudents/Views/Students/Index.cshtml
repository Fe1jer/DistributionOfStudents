@model DetailsStudentsVM

@{
    ViewData["Title"] = "Заявки абитуриентов";
}

<h1 class="text-center">Все заявки абитуриентов</h1>
<hr />
<div id="content" class="ps-lg-4 pe-lg-4" style="position: relative">
    <form asp-action="Index" asp-route-searhStudents="@Model.SearchValue" method="get" class="input-group w-auto my-auto pb-2">
        <input asp-for="@Model.SearchValue" autocomplete="off" class="form-control" type="search" name="searchStudents" placeholder="Найти абитуриентов" aria-label="Search">
        <button class="input-group-text border-0" type="submit">
            <svg xmlns="http://www.w3.org/2000/svg" height="20" fill="currentColor" class="bi bi-search" viewBox="0 0 16 16">
                <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001c.03.04.062.078.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1.007 1.007 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0z" />
            </svg>
        </button>
    </form>
    <div class="card shadow">
        <table class="table mb-0">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Students.First().FullName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Students.First().FacultyName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Students.First().Group)
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Students)
                {
                    <tr style="vertical-align: middle;">
                        <td>
                            <a class="nav-link text-success p-0" asp-controller="GroupsOfSpecialties" asp-action="Details"
                           asp-route-facultyName="@item.FacultyName" asp-route-id="@item.Group.Id" asp-route-searchStudents="@item.FullName">
                                @Html.DisplayFor(modelItem => item.FullName)
                            </a>
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.FacultyName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Group.Name)
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>