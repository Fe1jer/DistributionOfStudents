@model List<DetailsFacultyRecruitmentPlans>

@{
    ViewData["Title"] = "План приёма";
}

<h1 class="text-center"> План приёма на @(Model.Count != 0 ? Model.Select(f => f.Year).Max() : 0) год</h1>

<div id="content" class="ps-lg-4 pe-lg-4" style="position: relative">
    @foreach (DetailsFacultyRecruitmentPlans facultyPlan in Model)
    {
        <hr class="mt-4 mx-0" />
        <a class="nav-link text-success p-0" asp-controller="Faculties" asp-action="Details" asp-route-name="@facultyPlan.FacultyShortName"><h4>@facultyPlan.FacultyFullName</h4></a>
        <div class="card shadow">
            @await Html.PartialAsync("FacultyRecrutmentPlansPartial", facultyPlan)
        </div>
    }
</div>
