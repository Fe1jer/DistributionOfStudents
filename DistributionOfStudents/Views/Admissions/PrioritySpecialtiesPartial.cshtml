@model CreateChangeAdmissionVM

<div class="shadow card px-2">
    <h5 class="text-center">
        @Html.DisplayNameFor(modelItem => Model.SpecialitiesPriority)
    </h5>
    <span asp-validation-for="SpecialitiesPriority" class="text-danger"></span>
    @for (int i = 0; i < Model.SpecialitiesPriority.Count(); i++)
    {
        <hr class="my-1" />
        <div class="mb-1">
            <label class="control-label">
                @Html.DisplayFor(modelItem => Model.SpecialitiesPriority[i].NameSpeciality)
            </label>
            <input min="0" asp-for="@Model.SpecialitiesPriority[i].Priority" class="form-control" style="width: 100px" />
            <span asp-validation-for="@Model.SpecialitiesPriority[i].Priority" class="text-danger"></span>
            <input asp-for="@Model.SpecialitiesPriority[i].NameSpeciality" type="hidden" />
            <input asp-for="@Model.SpecialitiesPriority[i].PlanId" type="hidden" />
        </div>
    }
</div>