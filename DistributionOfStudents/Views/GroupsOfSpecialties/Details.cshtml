@model DetailsGroupOfSpecialitiesVM

@{
    ViewData["Title"] = Model.GroupOfSpecialties.Name;
}

<h1 class="text-center">
    @Model.GroupOfSpecialties.Name
    <a type="button" class="btn btn-success py-1" asp-action="Edit" asp-route-id="@Model.GroupOfSpecialties.Id" asp-route-facultyName="@ViewContext.RouteData.Values["facultyName"]">
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-square" viewBox="0 0 16 16">
            <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z" />
            <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z" />
        </svg>
    </a>
</h1>
<hr />
<div id="content" class="ps-lg-4 pe-lg-4" style="position: relative">
    <p class="text-center">
        <b>Сроки приёма документов: @Html.DisplayFor(model => model.GroupOfSpecialties.StartDate) - @Html.DisplayFor(model => model.GroupOfSpecialties.EnrollmentDate)</b>
        @if (Model.GroupOfSpecialties.EnrollmentDate < DateTime.Now.Date)
        {
            <b class="text-danger">Завершено</b>
        }
    </p>
    <p>@Html.DisplayFor(model => model.GroupOfSpecialties.Description)</p>
    <div class="card shadow">
        @await Html.PartialAsync("RecruitmentPlansPartial", Model.RecruitmentPlans)
    </div>
    <hr class="mt-4" />
    @if (!Model.GroupOfSpecialties.IsCompleted)
    {
        <h4 class="d-flex">
            @{
                string disabled = DateTime.Now.Date < Model.GroupOfSpecialties.EnrollmentDate ? "disabled" : String.Empty;
            }
            Заявки абитуриентов
            <a type="button" class="btn btn-sm btn-outline-success @disabled ms-2" asp-controller="Distribution" asp-action="Create"
           asp-route-groupId="@Model.GroupOfSpecialties.Id" asp-route-facultyName="@ViewContext.RouteData.Values["facultyName"]">
                Распределить
            </a>
        </h4>
        @if (Model.SearchValue != null && Model.SearchValue != "")
        {
            string value = Model.SearchValue;
        }
        <form asp-action="Details" asp-route-id="@Model.GroupOfSpecialties.Id" asp-route-facultyName="@ViewContext.RouteData.Values["facultyName"]" method="get" class="input-group w-auto my-auto pb-2">
            <input asp-for="@Model.SearchValue" autocomplete="off" class="form-control" type="search" name="searchStudents" placeholder="Найти абитуриентов" aria-label="Search">
            <button class="input-group-text border-0" type="submit">
                <svg xmlns="http://www.w3.org/2000/svg" height="20" fill="currentColor" class="bi bi-search" viewBox="0 0 16 16">
                    <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001c.03.04.062.078.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1.007 1.007 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0z" />
                </svg>
            </button>
        </form>
        <div class="card shadow" style="overflow: auto; max-height:600px;">
            @await Html.PartialAsync("AdmissionsPartial", Model)
        </div>
        <div class="row">
            <div class="col-xl-6">
                <hr class="mt-4" />
                <h4>График проходных баллов</h4>
                <div class="card shadow"><canvas id="passingScoresChart"></canvas></div>
            </div>
            <div class="col-xl-6">
                <hr class="mt-4" />
                <h4>График количества заявок по группе</h4>
                <div class="card shadow"><canvas id="admissionsCountChart"></canvas></div>
            </div>
        </div>
    }
    else
    {
        <h4 class="d-flex">
            Зачисленные студенты
            <button type="button" class="btn btn-outline-danger btn-sm ms-2" data-bs-toggle="modal" data-bs-target="#DeleteDistribution">
                Перераспределить
            </button>
        </h4>
        @await Html.PartialAsync("DistributedPlansPartial", Model.RecruitmentPlans)

        <div class="modal fade" id="DeleteDistribution" tabindex="-1" aria-labelledby="DeleteDistribution" style="display: none;" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="DeleteDistribution">Перераспределить абитуриентов</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        Вы уверенны, что хотите перераспределить абитуриентов?
                        <br />
                        Специальности в группе <b class="text-success">"@Model.GroupOfSpecialties.Name"</b> будут расформированы без возможности восстановления.
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Закрыть</button>
                        <a type="button" class="btn btn-primary" asp-controller="Distribution" asp-action="Delete"
                       asp-route-groupId="@Model.GroupOfSpecialties.Id" asp-route-facultyName="@ViewContext.RouteData.Values["facultyName"]">
                            Подтвердить
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
@section Scripts{
    <script src="~/lib/Chart.js/Chart.bundle.min.js"></script>
    <script type="module">
        import { showPlansStatistic, showGroupStatistic } from "/js/showStatistic.js";
        async function getStatistic() {
            showPlansStatistic("passingScoresChart", @Html.Raw(ViewContext.RouteData.Values["id"]), "@Html.Raw(ViewContext.RouteData.Values["facultyName"])");
            showGroupStatistic("admissionsCountChart", @Html.Raw(ViewContext.RouteData.Values["id"]));
        }
        getStatistic();
    </script>
    }