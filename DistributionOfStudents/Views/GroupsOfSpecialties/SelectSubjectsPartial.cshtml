@model CreateChangeGroupOfSpecVM
<div class="shadow card px-2 mt-3">
    <h5 class="text-center">
        @Html.DisplayNameFor(model => model.SelectedSubjects)<sup>*</sup>
    </h5>
    <span asp-validation-for="SelectedSubjects" class="text-danger"></span>
    <hr />
    @for (int i = 0; i < Model.SelectedSubjects.Count(); i++)
    {
        <div class="mb-2">
            <label class="control-label">
                <input type="checkbox" asp-for="@Model.SelectedSubjects[i].IsSelected" class="form-check-input" />
                @Html.DisplayFor(modelItem => Model.SelectedSubjects[i].Subject)
            </label>
            <input asp-for="@Model.SelectedSubjects[i].SubjectId" type="hidden" />
            <input asp-for="@Model.SelectedSubjects[i].Subject" type="hidden" />
        </div>
    }
</div>